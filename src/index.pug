        .container
          .service
            .service__img-text
              img(src="img/content/text-img-1.png", alt="Уборка")
            .service__row
              .service__col-3
                .service__nav
                  ul.nav.service__nav-list
                    li.service__nav-item
                      a.service__link.active(data-toggle="pill" href="#tab-0" ) Уборка квартир
                    li.service__nav-item
                      a.service__link(data-toggle="pill" href="#tab-1" ) Уборка коттеджей
                    li.service__nav-item
                      a.service__link(data-toggle="pill" href="#tab-2" ) Уборка офисов
                    li.service__nav-item
                      a.service__link(data-toggle="pill" href="#tab-3" ) Уборка помещений
                  span.decor-text услуги химчистки
              .service__col-9
                .tab-content.service__content
                  .tab-pane.service__tab.fade.show.active(id="tab-0" role="tabpanel" style="background-image: url('../img/decor/service-1.jpg')")
